medida1 = float(input('Insira um número: '))
medida2 = float(input('Insira outro número: '))
medida3 = float(input('Insira mais um número: '))

if medida1 < medida2 + medida3 and medida2 < medida1 + medida3 and medida3 < medida1 + medida2:
    print('podem formar um trângulo.')
    if medida1 == medida2 and medida2 == medida3 and medida1 == medida3:
        print('Equilátero')

    elif medida1 != medida2 != medida3 != medida1:
        print('Escaleno')

    else:
        print('Isósceles')

else:
    print('Não se pode formar um triângulo')
